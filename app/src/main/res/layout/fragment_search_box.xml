<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    tools:context="com.kristaappel.jobspot.fragments.SearchBoxFragment">


<!--Layout that holds the entire contents of the searchboxfrag-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Layout for all search tools-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <!--Layout for left side of search tools-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:layout_weight="0.7">

                    <!--Layout for First Search Row-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/locationButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:tint="@color/colorPrimary"
                            app:srcCompat="@android:drawable/ic_menu_mylocation" />

                        <EditText
                            android:id="@+id/et_location"
                            android:backgroundTint="@color/colorLightGrey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/white"
                            android:drawableStart="@drawable/ic_place"
                            android:hint="@string/enter_location"
                            android:iconifiedByDefault="false"
                            android:queryHint="Enter Location"
                            android:textAppearance="@style/TextAppearance.AppCompat" />

                    </LinearLayout>

                    <!--Layout for Second Search Row-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageButton
                            android:id="@+id/filterButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:layout_weight="0"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:tint="@color/colorPrimary"
                            app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

                        <EditText
                            android:id="@+id/et_keywords"
                            android:backgroundTint="@color/colorLightGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/white"
                            android:drawableStart="@drawable/ic_search_original"
                            android:hint="@string/enter_keyword_s"
                            android:iconifiedByDefault="false"
                            android:queryHint="Enter Keyword(s)"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:layout_weight="1"/>

                        <ImageButton
                            android:id="@+id/recentButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="0"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/recent_searches"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_history"
                            android:tint="@color/colorPrimary" />

                    </LinearLayout>


                </LinearLayout>

                <!--Layout for right side of search tools               -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_weight="0.3">

                    <ImageButton
                        android:id="@+id/searchButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimary"
                        android:tint="@color/colorWhite"
                        app:srcCompat="@android:drawable/ic_search_category_default"
                        android:contentDescription="@string/search" />

                </LinearLayout>

            </LinearLayout>



            <!--Layout for Map/List toggle buttons-->
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mapFragToggle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:text="@string/map"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/mapFragToggle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/colorLightGrey"
                    android:text="@string/list"
                    android:textColor="@color/colorPrimary" />


            </LinearLayout>

        </LinearLayout>


</FrameLayout>
